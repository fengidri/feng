<html>
<script src='/js/jquery.js'></script>
<script src='/js/base_use.js'></script>
<script src='/task/task.js'></script>
<style>
    *{ 
        margin:0;
    }
    body{ 
        width:100%;
    }
    #wrap{ 
        width:100%;
        margin:auto;
    }
    #chapter{ 
        font-size:18pt;
        height:30pt;
        border: 1px solid #000;
        border-width: 0 0 1px 0;
        padding: 22pt 12pt 8pt 22pt;
    }
    #title_header{ 
        margin:auto;
        width:799pt;
      font-size:27pt;
      text-align:center;
      margin-bottom:9pt;
      margin-top::18pt;
      padding:50pt;
      

    }
    #footer{ 
        height:740pt;
    }
    a{ 
      font-size:20pt;
        color:black;
        text-decoration:none;
    }
    li{ 
        margin:4pt;
        font-size:15pt;
        cursor:pointer;
    }
    S{ 
        color:blue;
    }
    h4{ 
        margin-top:20pt;
        font-size:18pt;
        display:inline;
    }
    h4, #tasks{ 
        display:inline-block;
        vertical-align:top;
    }
    #tasks{ 
        width:550pt;
    }
    #task_add{ 
        display:inline-block;
        cursor:pointer;
        width:40pt;
        height:18pt;
        line-height:30pt;
    }
    #task_add img{ 
        display:none;
        cursor:pointer;
    }
    #task_add:hover img{ 
        display:inline;
    }
    div#day{ 
        margin:auto;
        width:50%;
    }
    input#item{ 
        width:270pt;
        margin:20pt;
        border:1px solid black;
        padding:6pt;
        
    }
</style>
<body>

<div id='title_header'>
   Taskpaper <br /><br />
    丁雪峰
    

</div>
<form id='task_add_form' action='/taskpaper/mod' method='post'>
<input id='item' name = 'item' value='New Task'>
<input id='date' name = 'date' value='' type='hidden'>
<input id='flag' name = 'flag' value='add' type='hidden'>
    
</form>
<div id='wrap'>
    % dates = html_info.keys( )
    % dates.sort( reverse = True)
    % for date in dates :
    <div id='day'>
        <h4>{{date}}</h4>
        <div id="tasks">
            <div id='task_add'><img src='/images/add.png'></div>
                % items  = html_info[ date ]
                % if items != None:
                    <ul>
                        %for item in items:
                        <li>
                        %if item[ 'done' ]:
                        <S>{{item['item']}}</S>
                        %else:
                        {{item['item']}}
                        %end
                        </li>
                        %end
                    </ul>
                % end
        </div>
    </div>
    %if date.endswith( "Mon" ):
      <hr />
    %end
    %end
</div>
<div id='footer'></div>
</body>
</html>
